# Django Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!

# Development vs Production
DJANGO_DEBUG=True

# Generate a secure SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=your-long-random-secret-key-here

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Production Security Settings (only used when DJANGO_DEBUG=False)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
